<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.Reservation.ReservationFragment">

    <ImageView
        android:id="@+id/imageViewbg"
        android:layout_width="500dp"
        android:layout_height="wrap_content"

        android:src="@drawable/page3bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:alpha="0.3"
        />


    <ImageView
        android:id="@+id/whitebox"
        android:layout_width="330dp"
        android:layout_height="690dp"
        android:src="@drawable/reservationstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button

        android:id="@+id/buttoncolor"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/btn_bg_color"
        android:text="LISTLAND RESORT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-light"
        android:text="Choose Resort for Reservation"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whitebox" />

    <Button
        android:id="@+id/buttoncolor1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="GOLDLAND RESORT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor" />

    <Button
        android:onClick="check"
        android:id="@+id/buttoncolor2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="SPRINGLAND RESORT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor1"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor1"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor1"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/buttoncolor3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="URDANETA GARDEN RESORT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor2"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor2"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor2" />

    <Button
        android:id="@+id/buttoncolor4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/btn_bg_color"
        android:text="AL-JEN'S RESORT"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor3"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor3"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor3" />

    <ImageView
        android:id="@+id/horizontalline"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:src="@drawable/horizontalline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor4" />


    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#92C4EE"
        android:text="Proceed to confirm"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/horizontalline"
        app:layout_constraintStart_toStartOf="@+id/horizontalline"
        app:layout_constraintTop_toBottomOf="@+id/horizontalline" />

</androidx.constraintlayout.widget.ConstraintLayout>