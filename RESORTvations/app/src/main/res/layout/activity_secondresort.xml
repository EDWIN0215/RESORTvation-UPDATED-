<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondresort"
    android:background="@drawable/etobro">


    <ImageView
        android:id="@+id/lislandpic"
        android:layout_width="327dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/goldlandpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="GoldLand Resort Resort"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lislandpic" />


    <TextView
        android:textStyle="bold"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="330dp"
        android:alpha="0.8"
        android:background="@color/teal_700"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="Address: Manila N Rd, Urdaneta, Pangasinan \nPhone: (075) 568 2962\nSurrounded by palm trees, this relaxed hotel is 4 minutes away by foot from the closest bus stop, and an 8-minute walk from nearby eateries. It's 33 km from Tondaligan Beach Park on the
West Philippine Sea.\n\nSimple, airy rooms have flat-screen TVs; upgraded rooms and suites add minifridges. Straightforward cabins provide bunk beds and private verandas.\n\nComplimentary breakfast is served in a casual restaurant. Other amenities include a bright cafe, an outdoor swimming pool and a kids' pool"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/reservationbtn"
        android:layout_width="257dp"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#92C4EE"
        android:text="Back to home"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
